{
    "name": "mystia-language-extension",
    "displayName": "%displayName%",
    "description": "%description%",
    "publisher": "JackTriton",
    "version": "0.0.1",
    "icon": "./mystia.png",
    "main": "./src/extension.ts",  
    "engines": {
      "vscode": "^1.33.1"
    },
    "categories": [
      "Programming Languages"
    ],
    "scripts": {
      "vscode:prepublish": "npm run build",
      "build": "tsc -p ./",                  
      "watch": "tsc -watch -p ./"
    },
    "activationEvents": [
      "onLanguage:mystia"
    ],
    "devDependencies": {
     "typescript": "^4.9.5",
     "vscode": "^1.1.37",
     "@types/node": "^18.0.0",
     "@types/vscode": "^1.80.0"
    },
    "contributes": {
      "commands": [
        {
          "command": "mystia.setupEnv",
          "title": "Mystia: 環境セットアップ"
        },
        {
          "command": "mystia.build",
          "title": "Mystia: ビルド"
        },
        {
          "command": "mystia.runFile",
          "title": "Mystia: 実行"
        }
      ],
      "languages": [
        {
          "id": "mystia",
          "aliases": ["Mystia"],
          "extensions": [".ms"],
          "configuration": "./language-configuration.json"
        }
      ],
      "grammars": [
        {
          "language": "mystia",
          "scopeName": "source.mystia",
          "path": "./mystia.tmLanguage.json"
        }
      ],
      "semanticTokenScopes": [
      {
        "language": "mystia",
        "scopes": {
          "variable.definition": "variable.other.mystia",
          "variable": "variable.other.mystia",
          "variable.undefined": "variable.other.undefined.mystia"
        }
      }
    ]
    }
  }